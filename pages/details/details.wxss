/* pages/details/details.wxss */
.container{
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
  padding: 5rpx 5rpx;
  /* position: fixed; */
}
.showtitle,.showconduct{
  display: block;
  font-size: 35rpx;
}
.showtime,.fee,.showaddr,.showopen{
  display: block;
  font-size: 30rpx;
}
.hr{
  display: block;
  width: 100%;
  height: 20rpx;
  background-color: rgba(128, 128, 128, 0.322);
}
.tapmore{
  background-color: rgba(221, 221, 221, 0.712);
  border-bottom: 3rpx solid black;
}
.remark{
  position: fixed;
  width: 100%;
  height: 5%;
  background-color: white;
  bottom: 0;
  border: 1px solid white;
  text-align: center;
}
.liuyanview{
  width: 90%;
  margin: 10px auto;
}

.result{
  text-align: center;
  font-size: 14px;
  color: #f00;
  margin-top: 20px;
}

.headimg{
  width: 45px;
  height: 45px;
  border-radius: 100%;
}

.headimg image{
  width: 45px;
  height: 45px;
  border-radius: 100%;
}

.nickname_liuyantext{
  width: calc(100% - 55px);
  float: right;
  margin-top:-45px;
}

.nickname_liuyantext .nickname{
  font-size: 15px;
  color: #999;
}
.grade{
    width: 40%;
    transform: scale(.46,.46);
    height: 70vw;
    background-color:#e6e6e6;
    position: relative 
}
.nickname_liuyantext .nickname .time{
  font-size: 11px;
  color: #999;
  float: right;
}

.nickname_liuyantext .text{
  font-size: 16px;
  color: #666;
}
.remark text{
  padding-top:30rpx;
}